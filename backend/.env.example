# ==================== FLASK ====================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=change-this-to-random-secret-key-in-production

# ==================== DATABASE ====================
# PostgreSQL на Render.com (замените на свои данные)
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=security_check_db
DB_SCHEMA=security_check_schema

# Для production Render.com предоставит DATABASE_URL

# ==================== STRIPE ====================
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ==================== AI PROVIDER ====================
# Выберите: openai или anthropic
AI_PROVIDER=anthropic

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ==================== SECURITY APIs ====================
# VirusTotal (бесплатный план: 500 запросов/день)
VIRUSTOTAL_API_KEY=your_virustotal_key_here

# Google Safe Browsing
GOOGLE_SAFEBROWSING_KEY=your_google_key_here

# IPQualityScore (бесплатный план: 100 запросов/день)
IPQUALITYSCORE_KEY=your_ipqs_key_here

# ==================== EMAIL ====================
# Для отправки отчётов (опционально)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here

# ==================== APPLICATION ====================
# Максимальный таймаут сканирования (секунды)
MAX_SCAN_TIMEOUT=30

# Максимальный размер файла (байты) - 500MB
MAX_FILE_SIZE=524288000

# Разрешённые расширения файлов
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,zip,txt,jpg,jpeg,png,gif

# ==================== LOGGING ====================
LOG_LEVEL=INFO
